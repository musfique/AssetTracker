@model AssetTracker.Core.Models.EntityModel.Employee

@{
    ViewBag.Title = "Delete";
}
<div class="container">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel-heading">Delete Employee</div>
            <div class="panel-body">
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Department.DepartmentName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Department.DepartmentName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Designation.DesignationName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Designation.DesignationName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EmployeeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EmployeeName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ContactNo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                </dl>

                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <input type="button" value="Edit" class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "Employee", new { id = Model.EmployeeID })'" />
                            <input type="button" value="View All" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Employee")'" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
