@model IEnumerable<AssetTracker.Core.Models.Category>
@section css{
    @Styles.Render("~/Content/datatablecss")
}
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">View All Categories</div>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-12">
                    <input type="button" value="Create" class="btn btn-success" onclick="location.href = '@Url.Action("Create", "Category")'" />

                </div>
            </div>
            <table class="table table-hover table-background table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.GeneralCategory.GeneralCategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryDescription)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeneralCategory.GeneralCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryDescription)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.CategoryID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/datatablejs")
    <script>
        $(document).ready(function () {
            $(".table").DataTable();
        });
    </script>
}
