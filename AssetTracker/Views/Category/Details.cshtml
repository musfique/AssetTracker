@model AssetTracker.Core.Models.Category

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel-heading">Organization Details</div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.GeneralCategory.GeneralCategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GeneralCategory.GeneralCategoryName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryCode)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryCode)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryDescription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryDescription)
                    </dd>

                </dl>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Edit" class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "Category", new { id = Model.CategoryID })'" />
                        <input type="button" value="View All" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Category")'" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

