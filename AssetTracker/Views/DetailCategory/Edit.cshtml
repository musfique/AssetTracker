@model AssetTracker.Core.Models.DetailCategory

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <br />
            <div class="panel panel-primary">
                <div class="panel-heading">Edit Detail Category</div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.DetailCategoryID)

                        <div class="form-group">
                            @Html.Label("General Category", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("GeneralCategoryID", ViewBag.GeneralCategories as IEnumerable<SelectListItem>, "Select a General Category", htmlAttributes: new { @class = "form-control text-box-border-color" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Category", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("CategoryID", ViewBag.Categories as IEnumerable<SelectListItem>, "Select a Category", htmlAttributes: new { @class = "form-control text-box-border-color" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SubCategoryID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.SubCategoryID, ViewBag.SubCategories as IEnumerable<SelectListItem>, "Select a Sub Category", htmlAttributes: new { @class = "form-control text-box-border-color" })
                                @Html.ValidationMessageFor(model => model.SubCategoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DetailCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DetailCategoryName, new { htmlAttributes = new { @class = "form-control text-box-border-color" } })
                                @Html.ValidationMessageFor(model => model.DetailCategoryName, "", new { @class = "text-danger" })
                                <span class="text-danger" id="detail-category-name-exist"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DetailCategoryCode, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DetailCategoryCode, new { htmlAttributes = new { @class = "form-control text-box-border-color" } })
                                @Html.ValidationMessageFor(model => model.DetailCategoryCode, "", new { @class = "text-danger" })
                                <span class="text-danger" id="detail-category-code-exist"></span>

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DetailCategoryDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DetailCategoryDescription, new { htmlAttributes = new { @class = "form-control text-box-border-color" } })
                                @Html.ValidationMessageFor(model => model.DetailCategoryDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />
                                <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href = '@Url.Action("Index", "Home")'" />
                                <input type="button" value="View All" class="btn btn-info" onclick="location.href='@Url.Action("Index", "DetailCategory")'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Asset Tracker/DetailCategory/Edit.js"></script>
}
