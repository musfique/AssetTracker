@model AssetTracker.Core.Models.DetailCategory

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel-heading">Detail Category Details</div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SubCategory.SubCategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SubCategory.SubCategoryName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DetailCategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DetailCategoryName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DetailCategoryCode)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DetailCategoryCode)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DetailCategoryDescription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DetailCategoryDescription)
                    </dd>

                </dl>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Edit" class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "DetailCategory", new { id = Model.DetailCategoryID })'" />
                    <input type="button" value="View All" class="btn btn-info" onclick="location.href='@Url.Action("Index", "DetailCategory")'" />
                </div>
            </div>
        </div>
    </div>
</div>
</div>
